<!DOCTYPE html>
<head>
    <title>View User</title>
</head>
<body>
    <%- include('./subviews/navbar')-%>
    <%- include('./subviews/sideNavbar')-%>
    <div class="main_content">
        <div class="header ps-3 pt-3">
            <h6>Users Records</h6>
        </div>
        <div class="info">
            <div class="card p-4" style="width:100%">
            <%- include('./subviews/messages')-%>
            
                <table class="table table-hover" >
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Email-Id</th>
                            <th>Mobile No.</th>
                            <th>City</th>
                            <th>View</th>
                            <th>Update</th>
                            <th>Delete</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=1; i<users.length; i++) { %>
                        <tr>
                            <td><%= i %></td>
                            <td><%= users[i].fname %>&nbsp;<%= users[i].lname %></td>
                            <td><%= users[i].email %></td>
                            <td><%= users[i].phone%></td>
                            <td><%= users[i].city%></td>
                            <td style="width:60px; text-align: center"><a href="userProfile?id=<%= users[i]._id %>"><i class="fas fa-eye"></i></a></td>
                            <td style="width:60px; text-align: center"><a href="updateUser/<%= users[i]._id %>"><i class="fas fa-edit"></i></a></td>
                            <td style="width:60px; text-align: center"><a href="deleteUser?id=<%= users[i]._id %>"><i class="fas fa-trash-alt"></i></a></td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
         
            </div>
        </div>
    </div>
</body>